<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="50dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:id="@+id/jobDetail1_record">
        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:paddingLeft="10dp"
            android:id="@+id/totalQuantity_record">
            <TextView
                android:id="@+id/memberName"
                android:textColor="#343434"
                android:paddingLeft="5dp"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Manideep"/>
        </RelativeLayout>
        <View
            android:id="@+id/separate"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d0d0d0"
            android:layout_toRightOf="@+id/totalQuantity_record" />
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/comQuantity_record"
            android:layout_toRightOf="@+id/separate"
            android:layout_marginLeft="5dp"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/delete"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_delete_black_24dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>