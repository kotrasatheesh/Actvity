<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/loginlay"
    android:layout_height="match_parent"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/titl"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_bug_report_white_36dp"/>
                <TextView
                    android:layout_toRightOf="@id/logo"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/pNameTag"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:text="AeBug"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/welcomLay"
                android:layout_below="@+id/titl"
                android:layout_width="match_parent"
                android:gravity="left"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/welcom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome."
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:textColor="#edf4f8"
                   />
                <TextView
                    android:layout_toRightOf="@+id/welcom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="#c9dce9"
                    android:text="Please login."
                    />
                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/colorWhite"></View>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/welcomLay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                    <EditText
                        android:id="@+id/usernamee"
                        android:textColor="@color/textcolr"
                        android:background="@drawable/edittext_input"
                        android:padding="13dp"
                        android:fontFamily="sans-serif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="16sp"
                        android:textColorHint="@color/textcolr"
                        android:hint="Username"
                        android:inputType="textPersonName" />

                    <EditText
                        android:layout_below="@+id/usernamee"
                        android:layout_marginTop="15dp"
                        android:id="@+id/passe"
                        android:padding="13dp"
                        android:fontFamily="sans-serif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textColor="@color/textcolr"
                        android:background="@drawable/edittext_input"
                        android:textSize="16sp"
                        android:hint="Password"
                        android:textColorHint="@color/textcolr"
                        android:inputType="textPassword" />
                <Button
                    android:layout_below="@+id/passe"
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:textAllCaps="false"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round_button"
                    android:textColor="@color/colorWhite"
                    android:padding="13dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Login" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/login"
                    android:id="@+id/forgotPass"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#edf4f8"
                    android:text="Forgot Password?"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

















