<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container1"
    android:layout_height="match_parent"
    tools:context="com.example.asutosh.aebug.Issue_DetailsActivity">
    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <android.support.v7.widget.Toolbar
                android:id="@+id/detail_toolbar"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:fitsSystemWindows="true"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:layout_below="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/firstlay"
                    android:padding="10dp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/bugCRLay"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/buttypetag"
                            android:text="Ticket Type :"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp"
                            android:padding="8dp"
                            android:fontFamily="sans-serif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:id="@+id/btnlay0"
                            android:layout_below="@+id/buttypetag"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:orientation="horizontal"
                            android:weightSum="12"
                            android:background="@drawable/add_ticket_background"
                            android:layout_centerHorizontal="true">
                            <Button
                                android:id="@+id/Bug"
                                android:layout_marginLeft="1dp"
                                android:layout_marginBottom="1dp"
                                android:layout_marginTop="1dp"
                                android:clickable="true"
                                android:textColor="@color/colorBlack"
                                android:layout_weight="4"
                                android:layout_width="wrap_content"
                                android:background="@drawable/bugtype"
                                android:textSize="12sp"
                                android:textAllCaps="false"
                                android:layout_height="match_parent"
                                android:text="Bug"/>

                            <View
                                android:id="@+id/sep0"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/input" />
                            <Button
                                android:id="@+id/CR"
                                android:background="@color/colorWhite"
                                android:layout_weight="4"
                                android:layout_marginTop="1dp"
                                android:textSize="12sp"
                                android:layout_marginBottom="1dp"
                                android:text="CR"
                                android:textColor="@color/colorBlack"
                                android:textAllCaps="false"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <View
                                android:id="@+id/sep01"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/input" />
                            <Button
                                android:id="@+id/Support"
                                android:layout_toRightOf="@+id/sep"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_weight="4"
                                android:textSize="12sp"
                                android:textAllCaps="false"
                                android:background="@drawable/supporttype"
                                android:textColor="@color/colorBlack"
                                android:layout_height="match_parent"
                                android:text="Support"/>
                        </LinearLayout>
                    <!--<TextView
                        android:layout_centerVertical="true"
                        android:layout_below="@+id/edit_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/switch_select"
                        android:layout_marginRight="20dp"
                        android:text="Bug"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/Bugswitch"/>
                    <android.support.v7.widget.SwitchCompat
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/edit_Title"
                        android:layout_margin="5dp"
                        android:id="@+id/switch_select"
                        android:theme="@style/SwitchTheme"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        app:switchPadding="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:paddingRight="10dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_below="@+id/edit_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/switch_select"
                        android:layout_marginRight="10dp"
                        android:text="CR"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/CRswitch"/>-->
                    </RelativeLayout>
                    <TextView
                        android:layout_below="@+id/bugCRLay"
                        android:id="@+id/priortag"
                        android:text="Priority :"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:fontFamily="sans-serif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/btnlay"

                    android:layout_below="@+id/priortag"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:orientation="horizontal"
                    android:weightSum="12"
                    android:background="@drawable/status_edit_details"
                    android:layout_centerHorizontal="true">
                    <Button
                        android:id="@+id/urgent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:clickable="true"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:background="@drawable/urgentprior"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:layout_height="match_parent"
                        android:text="Urgent"/>

                    <View
                        android:id="@+id/sep"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/input" />
                    <Button
                        android:id="@+id/high"
                        android:background="@color/colorWhite"
                        android:layout_weight="3"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:text="High"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <View
                        android:id="@+id/sep1"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/input" />
                    <Button
                        android:id="@+id/medium"
                        android:background="@color/colorWhite"
                        android:textColor="@color/colorBlack"
                        android:textAllCaps="false"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="3"
                        android:textSize="12sp"
                        android:text="Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <View
                        android:id="@+id/sep2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/input" />
                    <Button
                        android:id="@+id/low"
                        android:layout_toRightOf="@+id/sep"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="3"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:background="@drawable/lowprior"
                        android:textColor="@color/colorBlack"
                        android:layout_height="match_parent"
                        android:text="Low"/>
                </LinearLayout>
                <TextView
                    android:layout_below="@+id/btnlay"
                    android:id="@+id/environtagtag"
                    android:text="Environment :"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/btnlay1"
                    android:layout_marginTop="0dp"
                    android:layout_below="@+id/environtagtag"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:orientation="horizontal"
                    android:weightSum="12"
                    android:background="@drawable/priority_edit_drawable"
                    android:layout_centerHorizontal="true">
                    <Button
                        android:id="@+id/production"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:padding="5dp"
                        android:clickable="true"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="4"
                        android:layout_width="wrap_content"
                        android:background="@drawable/production_draw"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:layout_height="match_parent"
                        android:text="Production"/>

                    <View
                        android:id="@+id/sepp"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/input" />
                    <Button
                        android:id="@+id/User_acceptance"
                        android:background="@color/colorWhite"
                        android:layout_weight="4"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:textSize="12sp"
                        android:text="User Acceptance"
                        android:textColor="@color/colorBlack"
                        android:textAllCaps="false"
                        android:layout_width="130dp"
                        android:layout_height="match_parent" />
                    <View
                        android:id="@+id/sepp1"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/input" />
                    <Button
                        android:id="@+id/development"
                        android:layout_toRightOf="@+id/sep"
                        android:layout_width="110dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="4"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:background="@drawable/developement_draw"
                        android:textColor="@color/colorBlack"
                        android:layout_height="match_parent"
                        android:text="Development"/>
                </LinearLayout>

                <EditText
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/btnlay1"
                    android:id="@+id/input_title"
                    android:background="@drawable/addticket_input"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="Ticket title"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/input_title"
                    android:id="@+id/input_descr"
                    android:background="@drawable/addticket_input"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:minHeight="80dp"
                    android:gravity="top"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:inputType="textMultiLine"
                    android:textSize="16sp"
                    android:textColorHint="@color/gray"
                    android:hint="Ticket description.."
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/memlay"
                    android:background="#eee"
                    android:layout_below="@+id/firstlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/assignmTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:text="Assigned Members" />
                <ImageButton
                    android:layout_alignParentRight="true"
                    android:id="@+id/addMembtn"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_add_circle_outline_black_24dp"/>
                </RelativeLayout>
                <View
                    android:layout_below="@id/memlay"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/colorWhite"></View>
                <ListView
                    android:layout_marginTop="0.4dp"
                    android:id="@+id/memAssginListview1"
                    android:background="@color/colorWhite"
                    android:divider="#ccc"
                    android:drawSelectorOnTop="true"
                    android:dividerHeight="1dp"
                    android:layout_below="@+id/memlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>
                <RelativeLayout
                    android:id="@+id/arealay"
                    android:background="#eee"
                    android:layout_below="@+id/memAssginListview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/areaTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:text="Areas" />
                <ImageButton
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/addAreaBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_add_circle_outline_black_24dp"/>
                </RelativeLayout>
                <View
                    android:layout_below="@id/arealay"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/colorWhite"></View>
                <ListView
                    android:layout_marginTop="0.4dp"
                    android:id="@+id/areaListview1"
                    android:divider="#ccc"
                    android:background="@color/colorWhite"
                    android:drawSelectorOnTop="true"
                    android:dividerHeight="1dp"
                    android:layout_below="@+id/arealay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>
                <RelativeLayout
                    android:id="@+id/documtlay"
                    android:background="#eee"
                    android:layout_below="@+id/areaListview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/addDocumet"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose file"/>
                <ImageButton
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/adddocumentbtnn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_add_circle_outline_black_24dp"/>
                </RelativeLayout>
                <ImageView
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/documtlay"
                    android:id="@+id/document"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/documtlay"
                    android:layout_toRightOf="@+id/document"
                    android:id="@+id/docNamee"
                    android:textColor="@color/colorBlack"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" />
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>